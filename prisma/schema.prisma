generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid String @id
}

model Timeblock {
  id        Int       @id @default(autoincrement())
  name      String
  type      String
  mode      String
  s         DateTime?
  duration  Json
  e         DateTime?
  project   Project?  @relation(fields: [projectId], references: [id])
  projectId Int?
  reminder  DateTime?
  status    String
}

model Project {
  id         Int         @id @default(autoincrement())
  name       String
  timeblocks Timeblock[]
  duration   Json?
  venture    Venture?    @relation(fields: [ventureId], references: [id])
  ventureId  Int?
  due        DateTime?
  status     String?
}

model Venture {
  id       Int       @id @default(autoincrement())
  name     String
  projects Project[]
}
