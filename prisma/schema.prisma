generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid String @id
}

model Timeblock {
  id       Int       @id @default(autoincrement())
  name     String
  type     String
  mode     String
  s        DateTime?
  duration Json
  e        DateTime?
  project  Int?
  reminder DateTime?
  status   Boolean
}

model Project {
  id         Int      @id @default(autoincrement())
  name       String
  timeblocks Int[]
  duration   Json
  due        DateTime
  status     String
}

model Venture {
  id       Int    @id @default(autoincrement())
  name     String
  projects Int[]
}
